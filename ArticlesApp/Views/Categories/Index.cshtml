
@{
    ViewBag.Title = "Lista categorii";
}

<h2>@ViewBag.Title</h2>
<br />  

@if (TempData.ContainsKey("message"))
{
    <h1>@ViewBag.message</h1>
}

<br />


<div class="row">
    @foreach (Pinterest.Models.Category category in ViewBag.Categories)
    {
        <div class="col-4 mb-4">
            <div class="card" style="height: 100%; width: 100%;">
                <div class="card-body d-flex justify-content-between flex-column">
                    <div>
                        <p><i class="bi bi-folder"></i> <strong>Denumire categorie:</strong> @category.CategoryName</p>
                    </div>
                    <div class="d-flex flex-row justify-content-between p-3">
                        <div>
                            <a asp-controller="Categories" asp-action="Show" asp-route-id="@category.Id" class="btn btn-sm btn-primary">Afisare categorie</a>
                        </div>
                        <div>
                            <a asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning">Editare categorie</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-4">
    <a asp-controller="Categories" asp-action="New" class="btn btn-lg btn-success">Adauga o noua categorie</a>
</div>
