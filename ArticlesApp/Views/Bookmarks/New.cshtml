@model Pinterest.Models.Bookmark

<br />

<h2 class= "mb-5 text-center">Adaugare Bookmark</h2>

<br />

<form asp-action="New" asp-controller="Bookmarks" method="post">

    <label asp-for="Name">Denumire colectie</label>
    <br />
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <input asp-for="IsPublic" class="form-check-input" type="checkbox" />
    <label asp-for="IsPublic" class="control-label">Seteaza aceasta categorie privata.</label>
    <span asp-validation-for="IsPublic" class="text-danger"></span>

    <br />
    <br />

    <button type="submit" class="btn btn-success">Adauga bookmark</button>

</form>


